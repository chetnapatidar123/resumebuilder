<%- include('../partials/header')%>

<div class="" style="width: 100; height: 600px; background-color: rgb(76, 92, 95); padding-top:30px;">
<div class="bg-warning-subtle" style="width: 100; height: 530px;">
    <div class="d-flex justify-content-center">
    <ul class="mt-4 fs-4 pt-1 fw-bold" style="border: 1px solid black; border-radius: 10px; width: 250px; height: 200px; padding-left: 70px;">
        <li><a href="/education">Eduaction</a></li>
        <li><a href="/skill">Skill</a></li>
        <li><a href="/project">Project</a></li>
        <li><a href="/experience">Experience</a></li>
        <li><a href="/interest">Interest</a></li>
    </ul>
    </div>
    <hr />
    <form action="/add-edu" class="education mt-4 mb-4 container" method="POST">
        <input  type="text" placeholder="Institute Name" name="institute" />
        <input  type="text" placeholder="Degree Name" name="degree" />
        <input  type="text" placeholder="University Name" name="university" />
        <input  type="text" placeholder="Year" name="year" />
        <input  type="text" placeholder="Grade/Percentage" name="grade" />

        <button class="btn btn-dark ">Add Education</button>
    </form>
    <hr />
    
    <div class="d-flex flex-wrap ms-5">
        <% user.education.forEach((e, i)=> { %>
        <div class="card me-3 mb-3" style="width: 18rem">
            <div class="card-body">
                <h5 class="card-title"><%= e.degree%></h5>
                <h6 class="card-subtitle mb-2 text-muted">
                    <%= e.institute%> - <%= e.year%> | <%= e.university%>
                </h6>
                <p class="card-text">CGPA/PERCENTAGE <%= e.grade%></p>
                <a class="text-danger" href="/delete-edu/<%= i%>" class="card-link">Remove</a>
            </div>
        </div>
        <% })%>
    </div>

</div>
</div>



<%- include('../partials/footer')%>