<%- include('./partials/header')%>

<div class="" style="width: 100; height: 900px; background-color: rgb(76, 92, 95); padding-top: 50px;">

<div class="container w-100 bg-warning-subtle">
    <h3 class="fw-dark fs-4 mt-3 p-2 btn btn-dark w-50 text-center" style="margin-left: 270px;">
        ðŸ”„Update Your Profile InformationðŸ”„
    </h3>

    <div class="d-flex w-75 p-2">
        <div class="me-5">
            <img
                style="object-fit: cover"
                class="rounded-circle profilePic"
                height="100"
                width="100"
                src="/images/<%= user.avatar%>"
                alt=""
            />
            <form action="/upload" method="post" enctype="multipart/form-data">
                <input class="d-none uploadImg" name="avatar" type="file" />
                <button class="mt-3 fw-bold btn btn-secondary">Upload Image</button><br><br>
                
            </form>
        </div>

        

        <div>
            <h1 class="fs-1 fw-light"><%= user.username%></h1>
            <h3 class="fs-4 fw-light"><%= user.email%></h3>
            <p>
                <small class="text-muted">
                    <a
                        class="text-decoration-none text-dark fs-3"
                        href="<%= user.links.linkedin%>"
                        ><i class="ri-linkedin-box-fill"></i
                    ></a>

                    <a
                        class="text-decoration-none text-dark fs-3 ms-3"
                        href="<%= user.links.github%>"
                        ><i class="ri-github-fill"></i
                    ></a>

                    <a
                        class="text-decoration-none text-dark fs-3 ms-3"
                        href="<%= user.links.behance%>"
                        ><i class="ri-behance-fill"></i
                    ></a>
                </small>
            </p>
        </div>
        

    </div>

    <div class="alert alert-danger w-25 fw-bold fs-5">
        <a class="text-danger me-2" href="/signout">Sign Out</a>
        <a class="text-danger" href="/resetpassword">Reset Password</a>
    </div>

    <form action="/update/<%= user._id%>" method="POST">
        <input
            class="mb-3 form-control w-75"
            type="text"
            placeholder="username"
            name="username"
            value="<%= user.username%>"
        />
        <input
            class="mb-3 form-control w-75"
            type="email"
            placeholder="email"
            name="email"
            value="<%= user.email%>"
        />

        <input
            class="mb-3 form-control w-75"
            type="text"
            placeholder="contact"
            name="contact"
            value="<%= user.contact%>"
        />

        <label class="mb-3 fw-bold fs-5" for="">Links</label>
        <input
            class="mb-3 form-control w-75"
            type="url"
            placeholder="https://linkedin.com"
            name="linkedin"
            value="<%= user.links.linkedin%>"
        />
        <input
            class="mb-3 form-control w-75"
            type="url"
            placeholder="https://github.com"
            name="github"
            value="<%= user.links.github%>"
        />
        <input
            class="mb-3 form-control w-75"
            type="url"
            placeholder="https://behance.com"
            name="behance"
            value="<%= user.links.behance%>"
        />

        <button class="fw-bold border rounded mb-5 p-2" style="background-color: rgb(197, 137, 64);">Update User Information</button>
    </form>
</div>
</div>

<script>
    const profilePic = document.querySelector(".profilePic");
    const uploadImg = document.querySelector(".uploadImg");
    profilePic.addEventListener("click", () => {
        console.log("hello");
        uploadImg.click();
    });
</script>







